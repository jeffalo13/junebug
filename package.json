{
  "name": "junebug",
  "version": "1.2.0",
  "description": "A simple, user-friendly, drag-and-drop bug reporting widget with screenshots and email support.",
  "author": "Jeffrey Antetomaso",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": true,
  "scripts": {
    "start": "vite",
    "build": "tsup src/index.ts --dts --format cjs,esm --loader .png=base64 --loader .css=copy",
    "postbuild": "cpx \"assets/**/*\" dist",
    "deploy": "npm run build && npm publish --access public"
  },
  "keywords": [],
  "license": "ISC",
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "cpx": "^1.5.0",
    "crypto": "^1.0.1",
    "html2canvas": "^1.4.1",
    "tsup": "^8.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.6.0",
    "typescript": "^4.9.5",
    "vite": "^4.5.3"
  }
}
